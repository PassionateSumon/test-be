{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNEXT",
    "rootDir": "./src",
    "outDir": "./dist",
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "verbatimModuleSyntax": true,
    "moduleResolution": "node",
    "allowArbitraryExtensions": false,
    "resolveJsonModule": true,
    "allowJs": true,
    "baseUrl": ".",
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}